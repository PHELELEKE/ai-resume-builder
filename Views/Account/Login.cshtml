@model AIResumeBuilder.Controllers.LoginViewModel

@{
    ViewData["Title"] = "Login to AI Resume Builder";
}

<div class="container-fluid px-0">
    <!-- Hero Section -->
    <div class="hero-section" style="background: linear-gradient(135deg, #667eea 0%, #764ba2 100%); color: white; padding: 60px 0 40px 0;">
        <div class="container">
            <div class="text-center">
                <h1 class="display-5 fw-bold mb-3">üîê Welcome Back</h1>
                <p class="lead mb-0" style="font-size: 1.2rem; opacity: 0.95;">
                    Sign in to your AI Resume Builder account
                </p>
            </div>
        </div>
    </div>

    <!-- Login Form Section -->
    <div class="container py-5">
        <div class="row justify-content-center">
            <div class="col-lg-5 col-md-7">
                <div class="auth-card card border-0 shadow-lg rounded-4 overflow-hidden">
                    <div class="card-body p-5">
                        <div class="text-center mb-4">
                            <div style="font-size: 3rem; color: #667eea; margin-bottom: 1rem;">üöÄ</div>
                            <h3 class="fw-bold" style="color: #2c3e50;">Sign In</h3>
                            <p class="text-muted">Access your resumes and AI analysis tools</p>
                        </div>

                        <form asp-action="Login" method="post">
                            <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>
                            
                            <!-- Email Field -->
                            <div class="form-group mb-4">
                                <label asp-for="Email" class="form-label fw-semibold" style="color: #2c3e50;">Email Address</label>
                                <div class="input-group">
                                    <span class="input-group-text bg-light border-end-0">
                                        <i class="fas fa-envelope text-muted"></i>
                                    </span>
                                    <input asp-for="Email" class="form-control border-start-0 ps-2" placeholder="Enter your email" />
                                </div>
                                <span asp-validation-for="Email" class="text-danger small mt-1"></span>
                            </div>
                            
                            <!-- Password Field -->
                            <div class="form-group mb-4">
                                <label asp-for="Password" class="form-label fw-semibold" style="color: #2c3e50;">Password</label>
                                <div class="input-group">
                                    <span class="input-group-text bg-light border-end-0">
                                        <i class="fas fa-lock text-muted"></i>
                                    </span>
                                    <input asp-for="Password" type="password" class="form-control border-start-0 ps-2" placeholder="Enter your password" />
                                </div>
                                <span asp-validation-for="Password" class="text-danger small mt-1"></span>
                            </div>
                            
                            <!-- Remember Me -->
                            <div class="form-group mb-4">
                                <div class="form-check">
                                    <input asp-for="RememberMe" class="form-check-input" style="background-color: #667eea; border-color: #667eea;" />
                                    <label asp-for="RememberMe" class="form-check-label text-muted">
                                        Keep me signed in
                                    </label>
                                </div>
                            </div>
                            
                            <!-- Submit Button -->
                            <button type="submit" class="btn btn-primary btn-lg w-100 fw-bold py-3" 
                                    style="background: linear-gradient(135deg, #667eea 0%, #764ba2 100%); border: none;">
                                Sign In to Your Account
                            </button>
                        </form>

                        <!-- Divider -->
                        <div class="text-center my-4">
                            <hr class="text-muted">
                            <span class="px-3 bg-white text-muted" style="position: relative; top: -12px;">New to AI Resume Builder?</span>
                        </div>

                        <!-- Register Link -->
                        <div class="text-center">
                            <p class="text-muted mb-0">Don't have an account?</p>
                            <a asp-action="Register" class="btn btn-outline-primary btn-lg w-100 fw-bold py-3 mt-2">
                                Create New Account
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .auth-card {
        transition: transform 0.3s ease-in-out, box-shadow 0.3s ease-in-out;
    }

    .auth-card:hover {
        transform: translateY(-5px);
        box-shadow: 0 15px 35px rgba(0,0,0,0.1) !important;
    }

    .form-control:focus {
        border-color: #667eea;
        box-shadow: 0 0 0 0.2rem rgba(102, 126, 234, 0.25);
    }

    .btn-primary {
        transition: all 0.3s ease-in-out;
    }

    .btn-primary:hover {
        transform: translateY(-2px);
        box-shadow: 0 5px 15px rgba(102, 126, 234, 0.4);
    }

    .hero-section {
        position: relative;
        overflow: hidden;
    }

    .hero-section::before {
        content: '';
        position: absolute;
        top: -50%;
        right: -50%;
        width: 100%;
        height: 200%;
        background: radial-gradient(circle, rgba(255,255,255,0.1) 1px, transparent 1px);
        background-size: 20px 20px;
        animation: float 20s infinite linear;
    }

    @@keyframes float {
        0% { transform: translate(0, 0) rotate(0deg); }
        100% { transform: translate(-50px, -50px) rotate(360deg); }
    }

    @@media (max-width: 768px) {
        .hero-section {
            padding: 40px 0 30px 0;
        }
        
        .display-5 {
            font-size: 2rem;
        }
        
        .card-body {
            padding: 2rem !important;
        }
    }
</style>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}